<mvc:View controllerName="TestGit.controller.EmpRecd" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" id="EmpRcd" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >
			<VBox height="80%" >
				<Table id="EmpRcdTable" items="{/modelData}" width="60%" headerText="Employee Record" growing="true"
	                    growingThreshold="5"
	                    growingScrollToLoad="true" >
					<columns>
						<Column hAlign="Center" width="10%">
							<header>
								<Text text="Sr No."/>
							</header>
						</Column>
						<Column hAlign="Center" width="10%">
							<header>
								<Text text="First Name"/>
							</header>
						</Column>
						<Column hAlign="Center" width="10%">
							<header>
								<Text text="Last Name"/>
							</header>
						</Column>
						<Column hAlign="Center" width="10%">
							<header>
								<Text text="Emp ID"/>
							</header>
						</Column>
						<Column hAlign="Center" width="10%">
							<header>
								<Text text="City"/>
							</header>
						</Column>
					</columns>
					<items >
						<ColumnListItem >
							<customData>
		                      <core:CustomData key="background" value="{odd}" writeToDom="true" />
		                    </customData>
							<cells>
								<Text text="{sr}" class="paddingzero"></Text>
								<Input value="{fname}" class="paddingzero"></Input>
								<Input value="{lname}" class="paddingzero"></Input>
								<Input value="{empid}" class="paddingzero"></Input>
								<Input value="{city}" class="paddingzero"></Input>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
			<VBox height="20%">
					<Button  text="Add" press="addRow"></Button >
			</VBox>
</mvc:View>